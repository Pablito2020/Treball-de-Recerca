<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    android:background="?attr/backgroundcolor"
    tools:context=".ActivitatPrincipal">

    <TextView
        android:id="@+id/operand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="138dp"
        android:height="100dp"
        android:gravity="center"
        android:textColor="?attr/textcolor"
        android:textSize="35sp" />
    <!--android:textAlignment="textEnd"
        android:layout_width="90dp"
         android:layout_height="60dp"
    -->
   <Switch
       android:id="@+id/darkswitch"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="54dp"
       android:text="@string/modenocturn"
       android:textColor="?attr/textcolor" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="37dp"
        android:columnCount="4"
        android:orientation="horizontal"
        android:padding="0dp"
        android:rowCount="5">

        <Button
            android:id="@+id/borra"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:background="?attr/buttoncolor"
            android:text="C"
            android:textColor="?attr/colortextespecial" />

        <Button
            android:id="@+id/punt"
            android:layout_margin="2dp"
            android:background="?attr/buttoncolor"
            android:text="."
            android:textColor="?attr/colortextespecial" />

        <Button
            android:id="@+id/pi"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:background="?attr/buttoncolor"
            android:text="Ï€"
            android:textColor="?attr/colortextespecial" />

        <Button
            android:id="@+id/nombre00"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:background="?attr/buttoncolor"
            android:text="00"
            android:textColor="?attr/colortextespecial" />

        <Button
            android:id="@+id/nombre1"
            android:layout_margin="2dp"
            android:background="?attr/buttoncolor"
            android:text="1"
            android:textColor="?attr/textcolor" />

        <Button
            android:id="@+id/nombre2"
            android:layout_margin="2dp"
            android:background="?attr/buttoncolor"
            android:text="2"
            android:textColor="?attr/textcolor" />

        <Button
            android:id="@+id/nombre3"
            android:layout_margin="2dp"
            android:background="?attr/buttoncolor"
            android:text="3"
            android:textColor="?attr/textcolor" />

        <Button
            android:id="@+id/botosuma"
            android:layout_margin="2dp"
            android:background="?attr/buttoncolor"
            android:text="+"
            android:textColor="?attr/colortextespecial" />

        <Button
            android:id="@+id/nombre4"
            android:layout_margin="2dp"
            android:background="?attr/buttoncolor"
            android:text="4"
            android:textColor="?attr/textcolor" />

        <Button
            android:id="@+id/nombre5"
            android:layout_margin="2dp"
            android:background="?attr/buttoncolor"
            android:text="5"
            android:textColor="?attr/textcolor" />

        <Button
            android:id="@+id/nombre6"
            android:layout_margin="2dp"
            android:background="?attr/buttoncolor"
            android:text="6"
            android:textColor="?attr/textcolor" />

        <Button
            android:id="@+id/botoresta"
            android:layout_margin="2dp"
            android:background="?attr/buttoncolor"
            android:text="-"
            android:textColor="?attr/colortextespecial" />

        <Button
            android:id="@+id/nombre7"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:background="?attr/buttoncolor"
            android:text="7"
            android:textColor="?attr/textcolor" />

        <Button
            android:id="@+id/nombre8"
            android:layout_margin="2dp"
            android:background="?attr/buttoncolor"
            android:text="8"
            android:textColor="?attr/textcolor" />

        <Button
            android:id="@+id/nombre9"
            android:layout_margin="2dp"
            android:background="?attr/buttoncolor"
            android:text="9"
            android:textColor="?attr/textcolor" />

        <Button
            android:id="@+id/botomultiplicacio"
            android:layout_margin="2dp"
            android:background="?attr/buttoncolor"
            android:text="x"
            android:textColor="?attr/colortextespecial" />

        <Button
            android:id="@+id/nombre0"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:background="?attr/buttoncolor"
            android:text="0"
            android:textColor="?attr/textcolor" />

        <Button
            android:id="@+id/botoigual"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:background="?attr/buttoncolor"
            android:text="="
            android:textColor="?attr/textcolor" />

        <Button
            android:id="@+id/botodivisio"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:background="?attr/buttoncolor"
            android:text="/"
            android:textColor="?attr/colortextespecial" />

    </GridLayout>
</RelativeLayout>