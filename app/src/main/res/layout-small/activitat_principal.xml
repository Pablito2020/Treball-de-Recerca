<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitat_Principal">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="286dp"
        android:layout_height="306dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:padding="0dp"
        android:rowCount="5">

        <Button
            android:id="@+id/botocamera"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:textSize="10dp"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:layout_row="0"
            android:text="@string/camara" />

        <Button
            android:id="@+id/botogaleria"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:textSize="10dp"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:layout_row="0"
            android:text="@string/galeria" />

        <Button
            android:id="@+id/botoalarma"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:textSize="10dp"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:layout_row="0"
            android:text="@string/alarma" />

        <Button
            android:id="@+id/bototrucar"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:textSize="10dp"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:layout_row="2"
            android:text="@string/trucar" />

        <Button
            android:id="@+id/botocontactes"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:textSize="10dp"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:layout_row="2"
            android:text="@string/contactes" />

        <Button
            android:id="@+id/botowhatsapp"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:textSize="10dp"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:layout_row="2"
            android:text="@string/whatsapp" />

        <Button
            android:id="@+id/botonavegador"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:textSize="10dp"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:layout_row="3"
            android:text="@string/navegador" />

        <Button
            android:id="@+id/botoconf.android"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:textSize="10dp"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:layout_row="3"
            android:text="@string/config.android" />

        <Button
            android:id="@+id/botomaps"
            android:layout_width="82dp"
            android:layout_height="80dp"
            android:textSize="10dp"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:layout_row="3"
            android:text="@string/maps" />

    </GridLayout>

    <TextView
        android:id="@+id/txtwifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/togglewifi"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp"
        android:textSize="10dp"
        android:gravity="center"
        android:text="Wifi" />

    <ToggleButton
        android:id="@+id/togglewifi"
        android:layout_width="82dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/gridLayout"
        android:layout_alignTop="@+id/togglellanterna"
        android:text="WIFI"
        android:textSize="10dp" />

    <ToggleButton
        android:id="@+id/togglellanterna"
        android:layout_width="82dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/gridLayout"
        android:layout_alignTop="@+id/btdatos"
        android:text="Lantern"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btdatos"
        android:layout_width="82dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="DATA" />

    <TextView
        android:id="@+id/txtflash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtwifi"
        android:layout_marginEnd="42dp"
        android:gravity="center"
        android:text="@string/flash" />

</RelativeLayout>