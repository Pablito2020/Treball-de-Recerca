<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitat_Principal">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="430dp"
        android:layout_height="499dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="37dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:padding="0dp"
        android:rowCount="5">

        <Button
            android:id="@+id/botocamera"
            android:layout_width="130dp"
            android:layout_height="128dp"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:layout_row="0"
            android:text="@string/camara" />

        <Button
            android:id="@+id/botogaleria"
            android:layout_width="130dp"
            android:layout_height="128dp"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:layout_row="0"
            android:text="@string/galeria" />

        <Button
            android:id="@+id/botoalarma"
            android:layout_width="130dp"
            android:layout_height="128dp"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:layout_row="0"
            android:text="@string/alarma" />

        <Button
            android:id="@+id/bototrucar"
            android:layout_width="130dp"
            android:layout_height="128dp"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:layout_row="2"
            android:text="@string/trucar" />

        <Button
            android:id="@+id/botocontactes"
            android:layout_width="130dp"
            android:layout_height="128dp"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:layout_row="2"
            android:text="@string/contactes" />

        <Button
            android:id="@+id/botowhatsapp"
            android:layout_width="130dp"
            android:layout_height="128dp"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:layout_row="2"
            android:text="@string/whatsapp" />

        <Button
            android:id="@+id/botonavegador"
            android:layout_width="130dp"
            android:layout_height="128dp"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:layout_row="3"
            android:text="@string/navegador" />

        <Button
            android:id="@+id/botoconf.android"
            android:layout_width="130dp"
            android:layout_height="128dp"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:layout_row="3"
            android:text="@string/config.android" />

        <Button
            android:id="@+id/botomaps"
            android:layout_width="130dp"
            android:layout_height="128dp"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:layout_row="3"
            android:text="@string/maps" />

    </GridLayout>

    <TextView
        android:id="@+id/txtwifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="221dp"
        android:layout_marginStart="123dp"
        android:gravity="center"
        android:text="Wifi" />

    <ToggleButton
        android:id="@+id/togglewifi"
        android:layout_width="101dp"
        android:layout_height="105dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/gridLayout"
        android:layout_marginBottom="91dp"
        android:text="WIFI" />

    <ToggleButton
        android:id="@+id/togglellanterna"
        android:layout_width="101dp"
        android:layout_height="105dp"
        android:layout_alignEnd="@+id/gridLayout"
        android:layout_alignTop="@+id/togglewifi"
        android:text="Lantern" />

    <Button
        android:id="@+id/btdatos"
        android:layout_width="101dp"
        android:layout_height="105dp"
        android:layout_alignTop="@+id/togglewifi"
        android:layout_centerHorizontal="true"
        android:text="DATA" />

    <TextView
        android:id="@+id/txtflash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtwifi"
        android:layout_marginEnd="117dp"
        android:gravity="center"
        android:text="@string/flash" />

</RelativeLayout>