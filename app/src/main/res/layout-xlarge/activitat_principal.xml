<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity = "center"
    android:background="?attr/colorfons"
    tools:context=".Activitat_Principal"
    tools:ignore="MissingDefaultResource">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:padding="0dp"
        android:rowCount="6">

        <Button
            android:id="@+id/botocamera"
            android:layout_width="200dp"
            android:layout_height="202dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:text="@string/camara"
            android:textColor="?attr/colortext"
            android:background="?attr/colorboto"
            android:textSize="20sp" />

        <Button
            android:id="@+id/botogaleria"
            android:layout_width="200dp"
            android:layout_height="202dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:text="@string/galeria"
            android:textColor="?attr/colortext"
            android:background="?attr/colorboto"
            android:textSize="20sp" />

        <Button
            android:id="@+id/botoalarma"
            android:layout_width="200dp"
            android:layout_height="202dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:text="@string/alarma"
            android:textColor="?attr/colortext"
            android:background="?attr/colorboto"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bototrucar"
            android:layout_width="200dp"
            android:layout_height="202dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:text="@string/trucar"
            android:textColor="?attr/colortext"
            android:background="?attr/colorboto"
            android:textSize="20sp" />

        <Button
            android:id="@+id/botocontactes"
            android:layout_width="200dp"
            android:layout_height="202dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:text="@string/contactes"
            android:textColor="?attr/colortext"
            android:background="?attr/colorboto"
            android:textSize="20sp" />

        <Button
            android:id="@+id/botowhatsapp"
            android:layout_width="200dp"
            android:layout_height="202dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:text="@string/whatsapp"
            android:textColor="?attr/colortext"
            android:background="?attr/colorboto"
            android:textSize="20sp" />

        <Button
            android:id="@+id/botonavegador"
            android:layout_width="200dp"
            android:layout_height="202dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:text="@string/navegador"
            android:textColor="?attr/colortext"
            android:background="?attr/colorboto"
            android:textSize="20sp" />

        <Button
            android:id="@+id/botoconf.android"
            android:layout_width="200dp"
            android:layout_height="202dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:text="@string/configandroid"
            android:textColor="?attr/colortext"
            android:background="?attr/colorboto"
            android:textSize="20sp" />

        <Button
            android:id="@+id/botomaps"
            android:layout_width="200dp"
            android:layout_height="202dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:text="@string/maps"
            android:textColor="?attr/colortext"
            android:background="?attr/colorboto"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtwifi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="?attr/colortext"
            android:text="Wifi" />

        <TextView
            android:id="@+id/txtflash"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="2"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="?attr/colortext"
            android:text="@string/flash" />


        <ToggleButton
            android:id="@+id/togglewifi"
            android:layout_width="200dp"
            android:layout_height="202dp"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="?attr/colortext"
            android:background="?attr/colorboto"
            android:text="WIFI" />

        <Button
            android:id="@+id/btdatos"
            android:layout_width="200dp"
            android:layout_height="202dp"
            android:layout_row="4"
            android:layout_column="1"
            android:textSize="20sp"
            android:textColor="?attr/colortext"
            android:background="?attr/colorboto"
            android:text="@string/datos" />

        <ToggleButton
            android:id="@+id/togglellanterna"
            android:layout_width="200dp"
            android:layout_height="202dp"
            android:layout_row="4"
            android:textColor="?attr/colortext"
            android:background="?attr/colorboto"
            android:layout_column="2" />
    </GridLayout>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8364082387419453/8228162085">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>