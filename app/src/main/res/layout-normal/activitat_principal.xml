<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitat_Principal">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="335dp"
        android:layout_height="510dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="1dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:padding="0dp"
        android:rowCount="5">

        <Button
            android:id="@+id/botocamera"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:layout_row="0"
            android:text="@string/camara"
            android:textSize="12sp" />

        <Button
            android:id="@+id/botogaleria"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:layout_row="0"
            android:text="@string/galeria"
            android:textSize="12sp" />

        <Button
            android:id="@+id/botoalarma"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:layout_row="0"
            android:text="@string/alarma"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bototrucar"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:layout_row="1"
            android:text="@string/trucar"
            android:textSize="12sp" />

        <Button
            android:id="@+id/botocontactes"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:layout_row="1"
            android:text="@string/contactes"
            android:textSize="12sp" />

        <Button
            android:id="@+id/botowhatsapp"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:layout_row="1"
            android:text="@string/whatsapp"
            android:textSize="12sp" />

        <Button
            android:id="@+id/botonavegador"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:layout_row="2"
            android:text="@string/navegador"
            android:textSize="12sp" />

        <Button
            android:id="@+id/botoconf.android"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:layout_row="2"
            android:text="@string/config.android"
            android:textSize="10sp" />

        <Button
            android:id="@+id/botomaps"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:layout_row="2"
            android:text="@string/maps"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtwifi"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:gravity="center"
            android:text="Wifi" />

        <TextView
            android:id="@+id/txtflash"
            android:layout_width="101dp"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_row="3"
            android:gravity="center"
            android:text="@string/flash" />


        <ToggleButton
            android:id="@+id/togglewifi"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="0"
            android:layout_row="4"
            android:text="WIFI" />

        <Button
            android:id="@+id/btdatos"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="1"
            android:layout_row="4"
            android:text="Data" />

        <ToggleButton
            android:id="@+id/togglellanterna"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="2"
            android:layout_row="4" />

    </GridLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8364082387419453/8228162085"></com.google.android.gms.ads.AdView>

</RelativeLayout>