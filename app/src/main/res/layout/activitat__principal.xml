<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitat_Principal">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="306dp"
        android:layout_height="424dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal"
        android:padding="0dp"
        android:rowCount="5">

        <Button
            android:id="@+id/botocamera"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:text="@string/camara" />

        <Button
            android:id="@+id/botogaleria"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:text="@string/galeria" />

        <Button
            android:id="@+id/botollanterna"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:text="@string/llanterna" />

        <Button
            android:id="@+id/bototrucar"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:text="@string/trucar" />

        <Button
            android:id="@+id/botocontactes"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:text="@string/contactes" />

        <Button
            android:id="@+id/botowhatsapp"
            android:layout_width="101dp"
            android:layout_height="105dp"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:text="@string/whatsapp" />

    </GridLayout>

</RelativeLayout>